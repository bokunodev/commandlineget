{
    "manifest_version": 2,
    "name": "Right Click Get (RCG)",
    "description": "Adds a context menu option to generate download commands to any link for wget/curl/aria/axel.",
    "version": "0.1",
    "homepage_url": "https://github.com/bokunodev/commandlineget",

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "options_ui": {
    "page": "options.html"
  },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "cookies",
        "<all_urls>",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "applications": {
        "gecko": {
            "id": "mycliget@example.com",
            "strict_min_version": "70"
        }
    }
}
